{
  "name": "@unimatrix-01/ui",
  "version": "1.1.0",
  "description": "A modern, holographic UI component library for React applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "scripts",
    "public"
  ],
  "scripts": {
    "dev": "npm run prebuild && vite",
    "build": "npm run prebuild && tsc && vite build",
    "prebuild": "node scripts/generate-doc-versions.mjs && node scripts/generate-nav.mjs",
    "preview": "vite preview",
    "lint": "eslint . --max-warnings 0",
    "backfill-tags": "node scripts/backfill-tags.mjs",
    "prepare": "npm run build",
    "postinstall": "npx husky install",
    "release": "node scripts/release.mjs",
    "prepublishOnly": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "node ./scripts/setup.js"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.24.8",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.3.1",
    "gray-matter": "^4.0.3",
    "react-day-picker": "^8.10.0",
    "react-markdown": "^10.1.0",
    "react-popper": "^2.3.0",
    "react-router-dom": "^7.6.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "conventional-changelog-core": "^9.0.0",
    "conventional-recommended-bump": "^11.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.15.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.34.0",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-svgr": "^4.2.0"
  },
  "bin": {
    "borg-ui": "./scripts/setup.js"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "holographic",
    "typescript",
    "tailwindcss"
  ],
  "author": "Unimatrix-01",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/borg-ui/issues"
  },
  "homepage": "https://github.com/yourusername/borg-ui#readme",
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json"
      },
      {
        "filename": "create-borg-ui/package.json"
      }
    ]
  }
}
